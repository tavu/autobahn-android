<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/idm_title"
            android:id="@+id/idm_title" android:layout_gravity="center" android:gravity="center"
            android:layout_marginLeft="20px" android:layout_marginRight="20px" android:layout_marginTop="20px"/>
    <ScrollView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/scrollView" android:layout_gravity="center" android:layout_marginLeft="20px"
            android:layout_marginTop="20px" android:layout_marginRight="20px">
        <ListView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/idmList" android:layout_gravity="center" android:headerDividersEnabled="false"
                android:footerDividersEnabled="false" android:focusableInTouchMode="false" android:focusable="false"
                android:fastScrollEnabled="false" android:fastScrollAlwaysVisible="false"
                android:drawSelectorOnTop="false" android:clickable="true" android:layout_marginRight="20px"
                android:layout_marginTop="20px" android:layout_marginLeft="20px"/>
    </ScrollView>
</LinearLayout>